{
    "name": "sserbin/formstack-assignment",
    "type": "project",
    "license": "proprietary",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.2",
        "ramsey/uuid": "^3.8",
        "phpunit/phpunit": "^8.0",
        "robmorgan/phinx": "^0.10.6"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.3",
        "vimeo/psalm": "^3.0",
        "symfony/dotenv": "^4.2"
    },
    "scripts": {
        "cs-check": "phpcs",
        "static-analysis" : "psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "ci-check" : [
            "@cs-check",
            "@static-analysis",
            "@test"
        ],
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
